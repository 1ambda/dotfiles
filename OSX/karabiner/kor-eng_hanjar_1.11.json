{
	"title":"애플키보드 한영전환/한자키 지정 (rev.1.11)",
	"rules":[
	   {
		  "description":"R_Command를 한영키로 사용",
		  "manipulators":[
			 {
				"type":"basic",
				"conditions":[
				   {
					  "type":"frontmost_application_if",
					  "bundle_identifiers":[
						 "com.parallels.desktop",
						 "com.parallels.vm",
						 "com.parallels.desktop.console",
						 "com.parallels.winapp."
					  ]
				   }
				],
				"from":{
				   "key_code":"right_command",
				   "modifiers":{
					  "optional":[
						 "caps_lock"
					  ]
				   }
				},
				"to":[
				   {
					  "key_code":"right_option"
				   }
				]
			 },
			 {
				"type":"basic",
				"conditions":[
				   {
					  "type":"frontmost_application_unless",
					  "bundle_identifiers":[
						 "com.parallels.desktop",
						 "com.parallels.vm",
						 "com.parallels.desktop.console",
						 "com.parallels.winapp."
					  ]
				   }
				],
				"from":{
				   "key_code":"right_command",
				   "modifiers":{
					  "optional":[
						 "caps_lock"
					  ]
				   }
				},
				"to":[
				   {
					  "key_code":"spacebar",
					  "modifiers":[
						 "left_control",
						 "left_option"
					  ]
				   }
				]
			 }
		  ]
	   },
	   {
		  "description":"R_Option을 한자키로 사용",
		  "manipulators":[
			 {
				"type":"basic",
				"conditions":[
				   {
					  "type":"frontmost_application_if",
					  "bundle_identifiers":[
						 "com.parallels.desktop",
						 "com.parallels.vm",
						 "com.parallels.desktop.console",
						 "com.parallels.winapp."
					  ]
				   }
				],
				"from":{
				   "key_code":"right_option",
				   "modifiers":{
					  "optional":[
						 "caps_lock"
					  ]
				   }
				},
				"to":[
				   {
					  "key_code":"right_control"
				   }
				]
			 },
			 {
				"type":"basic",
				"conditions":[
				   {
					  "type":"frontmost_application_unless",
					  "bundle_identifiers":[
						 "com.parallels.desktop",
						 "com.parallels.vm",
						 "com.parallels.desktop.console",
						 "com.parallels.winapp.",
						 "com.google.Chrome"
					  ]
				   },
				   {
					  "type":"input_source_if",
					  "input_sources":[
						 {
							"language":"ko"
						 }
					  ]
				   }
				],
				"from":{
				   "key_code":"right_option",
				   "modifiers":{
					  "optional":[
						 "caps_lock"
					  ]
				   }
				},
				"to":[
				   {
					  "key_code":"right_option",
					  "lazy":true
				   }
				],
				"to_if_alone":[
				   {
					  "key_code":"return_or_enter",
					  "modifiers":[
						 "right_option"
					  ]
				   }
				]
			 }
		  ]
	   }
	]
 }